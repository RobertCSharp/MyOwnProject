@model Website.Models.FoodItem

@{
    ViewData["Title"] = "Edit Food Item";
}


<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form asp-action="AddFood" enctype="multipart/form-data">
            <div class="d-flex justify-content-between">
                <h1>Edit Food Item</h1>
                <div class="form-group mt-2">
                    <input type="submit" value="Update Item" class="btn btn-primary" />
                </div>
            </div>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ImageData" class="control-label">Upload Image</label>
                <input type="file" accept=".png,.jpg,.jpeg,.gif,.tif"
                       onchange="document.getElementById('itemPhoto').src = window.URL.createObjectURL(this.files[0])"
                       asp-for="ImageData" class="form-control" />
                <span asp-validation-for="ImageData" class="text-danger"></span>
            </div>
            <figure class="figure" style="width:400px;height:214.36px;">
                <img id="itemPhoto" src="data:image/*;base64,@(Convert.ToBase64String(Model.ImageData))" class="figure-img img-fluid rounded" alt="">
            </figure>
        </form>
    </div>
    <div class="col-md-4"></div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
